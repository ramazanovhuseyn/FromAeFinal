</style>
<section class="border pb-5" style="background-color: #eee;">
    <div class="container-fluid menu-h1" style="background-color: #fff;">
        <div class="row">
            <div>
                @foreach (var item in ViewBag.SubMenuName)
                {
                    <h1 class="pb-1 pt-4">@item</h1>
                }
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="submenus">
                    <a href="@Url.Action("Index","ProductsPage",new { id=item.Id})"  title="@item.Name">
                        <img src="/images/@item.Image" alt="Telefonlar">
                        <span>@item.Name</span>
                    </a>
                </div>
            }

        </div>
    </div>
</section>