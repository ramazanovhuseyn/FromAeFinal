
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Category>
<style>
    .return-home{
    margin: 0;
    padding: 5px 15px;
    white-space: nowrap;
    overflow: hidden;
}
.return-home a{
color: #666;
text-decoration: none;
font-size: 12px;
font-family: Arial, Helvetica, sans-serif;
}
.return-home a::after{
    content: "»";
    color: #ccc;
    padding: 5px;
    font-size: 16px;
    line-height: 16px;
}
.menu-h1{
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
}
.menu-h1 div{
display: flex;
justify-content: center;
margin-top: 10px;
}
.menu-h1 div div h1{
    color: #666;
    font-size: 22px;
    margin: 0;
    font-family: sans-serif;
}
.row .submenus:first-child a, .row .submenus:nth-child(2) a{
margin: 5px;
display:block;
background-color: #fff;
position: relative;
text-align: center;
}
.submenus a{
 margin: 5px;
display:block;
background-color: #fff;
position: relative;
text-align: center;
}
.submenus a img{
    width: 65%;
}
.submenus:first-child, .submenus:nth-child(2){
    display: block;
    width: 50%;
}
.submenus{
    width: 33.3%;
}
.submenus a span {
    background-color: #fff;
    bottom: 0;
    display: block;
    color: #000;
    font-size: 14px;
    font-weight: 500;
    position: absolute;
    padding: 10px;
    text-align: left;
    width: 100%;
}
